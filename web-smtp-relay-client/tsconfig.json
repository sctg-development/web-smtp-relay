{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "strict": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "types": [
        "@cloudflare/workers-types"
    ]
}